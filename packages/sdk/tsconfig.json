{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "strict": true,
    "paths": {
      "@itzam/api": [
        "../hono/client/*"
      ]
    }
  },
  "typeAcquisition": {
    "enable": true,
  },
  "include": [
    "src",
    "../hono/client/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}