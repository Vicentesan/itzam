{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Itzam",
  "description": "Itzam is the open-source platform for AI integration.",
  "colors": {
    "primary": "#ea580c",
    "light": "#ea580c",
    "dark": "#ea580c"
  },
  "icons": {
    "library": "lucide"
  },
  "fonts": {
    "family": "Figtree"
  },
  "favicon": "/favicon.ico",
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude"]
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Get Started",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "get-started/overview",
              "get-started/authentication",
              "get-started/threads",
              "get-started/glossary"
            ]
          },
          {
            "group": "Guides",
            "pages": ["guides/chatbot"]
          }
        ]
      },
      {
        "tab": "SDKs",
        "groups": [
          {
            "group": "JavaScript & TypeScript",
            "icon": "js",
            "pages": [
              "sdks/javascript",
              "sdks/javascript/generate-text",
              "sdks/javascript/stream-text",
              "sdks/javascript/generate-object",
              "sdks/javascript/stream-object",
              "sdks/javascript/attachments",
              {
                "group": "Threads",
                "icon": "messages-square",
                "pages": [
                  "sdks/javascript/threads/overview",
                  "sdks/javascript/threads/create",
                  "sdks/javascript/threads/get-by-id",
                  "sdks/javascript/threads/list-by-workflow",
                  "sdks/javascript/threads/list-runs-by-thread"
                ]
              },
              "sdks/javascript/get-run-by-id",
              "sdks/javascript/get-models",
              "sdks/javascript/errors"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Endpoints",
            "pages": [
              {
                "group": "Text",
                "pages": [
                  "api-reference/endpoints/generate-text",
                  "api-reference/endpoints/stream-text"
                ]
              },
              {
                "group": "Object",
                "pages": [
                  "api-reference/endpoints/generate-object",
                  "api-reference/endpoints/stream-object"
                ]
              },
              {
                "group": "Threads",
                "pages": [
                  "api-reference/endpoints/create-thread",
                  "api-reference/endpoints/get-thread-by-id",
                  "api-reference/endpoints/get-threads-by-workflow",
                  "api-reference/endpoints/get-runs-by-thread"
                ]
              },
              {
                "group": "Runs",
                "pages": ["api-reference/endpoints/get-run-by-id"]
              },
              {
                "group": "Models",
                "pages": ["api-reference/endpoints/get-models"]
              },
              {
                "group": "Errors",
                "pages": ["api-reference/errors"]
              }
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Call the Founders",
          "href": "https://cal.com/gustavo-fior/30min",
          "icon": "video"
        },
        {
          "anchor": "Join the Discord",
          "href": "https://discord.gg/RtqC7brGbk",
          "icon": "discord"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@itz.am",
          "icon": "hand"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logotype-light.png",
    "dark": "/logo/logotype-dark.png"
  },
  "footer": {
    "socials": {
      "x": "https://x.com/itzam_ai",
      "discord": "https://discord.gg/RtqC7brGbk",
      "github": "https://github.com/itzam-ai/itzam"
    }
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://itz.am/dashboard"
    }
  },
  "search": {
    "prompt": "Search..."
  }
}
